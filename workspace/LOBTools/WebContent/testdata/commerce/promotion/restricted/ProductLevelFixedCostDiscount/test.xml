<testcase>
	
	<!-- ======================= Preliminary steps ==================== -->
	<!-- Open the Promotions tool. -->
	<action name="wcfAutoOpenToolAction">
		<param name="toolId" value="promotionManagement"/>
	</action>
		
	<!-- Select the store. -->
	<action name="wcfAutoSelectStoreAction">
		<param name="storeKey" value="storeIdentifier"/>
	</action>
	
	<!-- Run the promotion create test. -->
	<action name="wcfAutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/promotion/restricted/ProductLevelFixedCostDiscount/testCreate.xml"/>
	</action>

	<!-- Run the promotion modify tests. -->
	<action name="wcfAutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/promotion/restricted/ProductLevelFixedCostDiscount/testModify.xml"/>
	</action>
	<action name="wcfAutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/promotion/restricted/ProductLevelFixedCostDiscount/testModifyAsSiteWide.xml"/>
	</action>
	
	<!-- Run the promotion activate test. -->
	<action name="wcfAutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/promotion/restricted/ProductLevelFixedCostDiscount/testActivate.xml"/>
	</action>
	
	<!-- Run the promotion deactivate test. -->
	<action name="wcfAutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/promotion/restricted/ProductLevelFixedCostDiscount/testDeactivate.xml"/>
	</action>

	<!-- Run the promotion delete test. -->
	<action name="wcfAutoRunTestCaseAction">
		<param name="url" value="/testdata/commerce/promotion/restricted/ProductLevelFixedCostDiscount/testDelete.xml"/>
	</action>

</testcase>
