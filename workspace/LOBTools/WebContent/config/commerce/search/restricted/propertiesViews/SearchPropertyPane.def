<Definitions>

	<PropertyGroup definitionName="srchIncludeFacetsPropertyGroup" 
		collapsable="false" 
		name="includeFacetsGroup">
		<PropertyCheckbox
			trueValue="true"
			falseValue="false"
			propertyName="includeFacets"
			promptText="${srchSearchResources.includeFacets}"
			helpText="${srchSearchResources.help_includeFacets}"/>
	</PropertyGroup>
		
	<PropertyGroup definitionName="srchFacetExclusionPropertyGroup"  
		collapsable="false" 
		name="excludeFacetGroup">
		
		<PropertyChildListEditor 
			listDefinitionName="srchFacetExclusionGrid" 
			name="searchFacetExclusionEditor" 
			objectTypes="ChildFacetExclusion" 
			promptText="${srchSearchResources.excludeFacets}" 
			required="false"
			hideEditColumnAction="true" 
			helpText="${srchSearchResources.help_excludeFacets}"/>
		
	</PropertyGroup>

</Definitions>

