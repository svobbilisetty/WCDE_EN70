<Definitions>
	<ObjectProperties definitionName="pglPageLayoutProperties">
		<PropertyPane name="pane">
			
			<!-- Property Group: General Page Layout Information. This properties group contains general page layout information such as name, description etc -->
			<PropertyGroup collapsable="false" groupTitle="${pglPageLayoutResources.generalInformationSection}" hideHeaderWhenOnlyGroup="true" name="generalInfoPropGrp" open="true">
	            <!-- Property: Name. An input box for the name property. -->			
				<PropertyInputLongText enabled="false" promptText="${pglPageLayoutResources.namePrompt}" propertyName="name"/>
				<!-- Property: Description. A text editor for the description property. -->
				<PropertyInputMultiLineText enabled="false" promptText="${pglPageLayoutResources.descriptionPrompt}" propertyName="description"/>
				<!-- Property : Full image. An image editor for the fImage property -->
				<ImageEditor enabled="false" promptText="${pglPageLayoutResources.fullImagePrompt}" propertyName="fImage" showText="false"/>
			</PropertyGroup>

		</PropertyPane>
	</ObjectProperties>
</Definitions>
