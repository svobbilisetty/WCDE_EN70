	<!--
            Defines the properties page for Customer Segment folders.
            This properties page shows the folder identifier, description,etc.
       -->
<Definitions>
      <ObjectProperties definitionName="mktCustomerSegmentFolderProperties">
            <PropertyPane name="CustomerSegmentFolderPane">
                  <PropertyGroup baseDefinitionName="wcfPropertyAssetInformationGroup" name="assetGroup"/>
                  <PropertyGroup groupTitle="${mktMarketingResources.CustomerSegmentFolder_newCustomerSegmentFolderProperties}" name="CustomerSegmentFolderPropertiesGroup" open="true">
                        <PropertyInputText name="identifier" promptText="${mktMarketingResources.CustomerSegmentFolder_name}" propertyName="identifier" required="true"/>
                        <PropertyInputMultiLineText promptText="${mktMarketingResources.CustomerSegmentFolder_description}" propertyName="description"/>
                        <ReferenceEditor promptText="${mktMarketingResources.CustomerSegmentFolder_parentFolder}" headerText="${mktMarketingResources.CustomerSegmentFolder_name}" helpText="${mktMarketingResources.CustomerSegmentFolder_parentFolder_helpText}" minWidth="460" name="parentFolderRefEditor" parentObjectTypes="CustomerSegmentFolder,InheritedCustomerSegmentFolder" referenceObjectTypes="CustomerSegmentFolderReference,InheritedCustomerSegmentFolderReference"/>                             
                  </PropertyGroup>                   
            </PropertyPane>
      </ObjectProperties>    
</Definitions>
