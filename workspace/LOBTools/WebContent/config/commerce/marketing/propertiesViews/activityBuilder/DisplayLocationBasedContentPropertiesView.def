<Definitions>
	<!---
		Properties view for the {@link mktDisplayLocationBasedContentElementObject Display Location-based Content action}.
	-->
	<FlowElementProperties definitionName="mktDisplayLocationBasedContentProperties">
		<PropertyGroup collapsable="false" name="group">

			<PropertyCombobox promptText="${mktMarketingResources.locationType}" 
                              propertyName="locationType"
                              helpText="${mktMarketingResources.help_locationcontent_locationType}" />
                              
			<PropertyInputText helpText="${mktMarketingResources.help_locationcontent_prefix}" 
								promptText="${mktMarketingResources.urlPrefix}" 
								propertyName="urlPrefix" required="false"/>    
			<PropertyInputText helpText="${mktMarketingResources.help_locationcontent_suffix}" 
								promptText="${mktMarketingResources.urlSuffix}" 
								propertyName="urlSuffix" required="false"/>     
		</PropertyGroup>
	</FlowElementProperties>
</Definitions>