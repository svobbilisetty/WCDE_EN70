<Definitions>
	<!---
		Properties view for the {@link mktDisplayBestSellersProperties Display Top Browsed action}.
	-->	
	<FlowElementProperties definitionName="mktDisplayTopBrowsedProperties">	
		<PropertyGroup collapsable="false" name="group">	
			<PropertyChildListEditor helpText="${mktMarketingResources.help_topbrowsed_category}" listDefinitionName="mktCategoryGrid" name="objectGroupId" objectTypes="ChildCatalogGroup,ChildInheritedCatalogGroup" promptText="${mktMarketingResources.categories}" required="true"/>	
			<PropertyCombobox helpText="${mktMarketingResources.help_topbrowsed_location}" helpLinkURL="concepts/csbactdistopbrowsed.htm" name="location" promptText="${mktMarketingResources.rankingLocation}" propertyName="location" required="true"/>					
			<PropertyStepper helpText="${mktMarketingResources.help_topbrowsed_size}" maximumValue="100" minimumValue="1" promptText="${mktMarketingResources.rankingSize}" propertyName="size" required="true"/>
			<PropertyStepper helpText="${mktMarketingResources.help_topbrowsed_interval_num}" maximumValue="365" minimumValue="1" promptText="${mktMarketingResources.rankingIntervalNum}" propertyName="intervalNum" required="true"/>
		</PropertyGroup>
	</FlowElementProperties>
	
</Definitions>