	<!---
		This initialization service sets marketing view access control in context value
		'marketingViewRole'.
	-->
	<InitService definitionName="wcfMarketingViewAccessRightInitService" url="/cmc/GetAccessRight">
		<ServiceParam name="storeId"/>
		<ServiceParam parameterName="usage" value="IBM_ViewMarketingTool"/>
		<ServiceParam parameterName="accessRightContext" value="marketingViewRole"/>
