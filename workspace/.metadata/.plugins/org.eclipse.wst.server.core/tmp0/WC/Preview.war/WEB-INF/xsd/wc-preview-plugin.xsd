<schema targetNamespace="http://www.ibm.com/WebSphereCommerce"
			xmlns="http://www.w3.org/2001/XMLSchema"
			xmlns:wc="http://www.ibm.com/WebSphereCommerce">
    <element name="PreviewPlugins">
        <complexType>
            <sequence>
                <element ref="wc:PreviewPlugin" minOccurs="0" maxOccurs="unbounded"/>
            </sequence>
        </complexType>
    </element>
    <element name="PreviewPlugin">
        <complexType>
            <attribute name="name" type="string" use="required"/>
            <attribute name="classname" type="string" use="required"/>
            <attribute name="description" type="string" use="optional"/>
        </complexType>
    </element>
</schema>