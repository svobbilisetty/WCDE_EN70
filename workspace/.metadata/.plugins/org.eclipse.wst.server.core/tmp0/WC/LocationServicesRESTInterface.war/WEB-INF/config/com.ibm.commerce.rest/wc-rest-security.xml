<security>

  <!-- Define if SSL is enabled for a resource and its methods. -->
  <!-- When not defined, SSL is disabled for the resource by default. -->
  <!-- An optional "method" attribute may be set for each sslConfig element with value to be GET, POST, PUT, or DELETE. -->
  <!-- For example, sslConfig resource="aResource" method="DELETE" enabled="true"/ -->

  <sslConfig resource="store/{storeId}/clientLocation" enabled="true"/>
  <sslConfig resource="store/{storeId}/clientLocations" enabled="true"/>
  <sslConfig resource="store/{storeId}/pointOfInterest" method="POST" enabled="true"/>
  <sslConfig resource="store/{storeId}/pointOfInterest" method="PUT" enabled="true"/>
  <sslConfig resource="store/{storeId}/pointOfInterest" method="DELETE" enabled="true"/>
</security>